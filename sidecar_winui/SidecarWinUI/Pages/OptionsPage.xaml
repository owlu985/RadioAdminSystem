<Page
    x:Class="SidecarWinUI.Pages.OptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="16" Padding="16">
        <TextBlock Text="Options" FontSize="22" FontWeight="SemiBold" />
        <StackPanel Spacing="6">
            <TextBlock Text="Music library folder" />
            <TextBox x:Name="MusicRootBox" Width="520" />
        </StackPanel>
        <StackPanel Spacing="6">
            <TextBlock Text="MoneyMusic spreadsheet path" />
            <TextBox x:Name="SpreadsheetBox" Width="520" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Save" Click="OnSave" />
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</Page>
