<Page
    x:Class="SidecarWinUI.Pages.ArchivistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Spacing="16" Padding="16">
            <TextBlock Text="Archivist Catalog" FontSize="22" FontWeight="SemiBold" />

            <StackPanel Spacing="8">
                <TextBlock Text="Album clue" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox x:Name="AlbumQueryBox" Width="340" PlaceholderText="catalog, label, or album" />
                    <Button Content="Lookup" Click="OnLookupAlbum" />
                </StackPanel>
                <ListView x:Name="AlbumResults" Height="120" />
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Album rip helper" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Upload rip" Click="OnUploadRip" />
                    <TextBlock x:Name="UploadStatus" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <StackPanel>
                        <TextBlock Text="Silence dB" />
                        <TextBox x:Name="SilenceBox" Width="100" Text="-38" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Gap ms" />
                        <TextBox x:Name="GapBox" Width="100" Text="1200" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Min track ms" />
                        <TextBox x:Name="TrackBox" Width="120" Text="60000" />
                    </StackPanel>
                    <Button Content="Analyze" Click="OnAnalyzeRip" />
                </StackPanel>
                <ListView x:Name="RipSegments" Height="180" />
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="MusicBrainz release search" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox x:Name="MbTitleBox" Width="200" PlaceholderText="Title" />
                    <TextBox x:Name="MbArtistBox" Width="200" PlaceholderText="Artist" />
                    <Button Content="Search" Click="OnLookupMb" />
                </StackPanel>
                <ComboBox x:Name="MbReleaseCombo" Width="520" SelectionChanged="OnReleaseChanged" />
                <ListView x:Name="MbTracks" Height="160" />
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="Search catalog" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox x:Name="SearchBox" Width="320" PlaceholderText="Artist, title, album, catalog" />
                    <ToggleButton x:Name="ShowAllToggle" Content="Show all" />
                    <Button Content="Search" Click="OnSearch" />
                </StackPanel>
                <ListView x:Name="SearchResults" Height="260" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
